                    <TextView
                        style="@style/LargeBoldBlackText"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="5dp"
                        android:paddingBottom="10dp"
                        android:text="@string/device_usage_title" />

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
